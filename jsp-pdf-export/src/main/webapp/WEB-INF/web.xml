<?xml version="1.0" encoding="UTF-8"?><web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	<display-name>My Web Application</display-name>

	<servlet>
		<servlet-name>test-servlet</servlet-name>
		<servlet-class>uk.co.certait.pdf.export.TestServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>test-servlet</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
  	
  	<welcome-file-list>
  		<welcome-file>/pages/input.jsp</welcome-file>
  	</welcome-file-list>

</web-app>